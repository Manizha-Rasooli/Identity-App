@model List<AppUser>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h3>Üyeler</h3>
<table class="table table-bordered table-striped">
        <tr>
            <td>User Id</td>
            <td>User Name</td>
            <td>Email</td>
            <td>Roller</td>
            <td>Rol Atama</td>
        </tr>
        @if (Model.Count==0)
        {
            <tr>
                 <td colspan="3">Hiç bir üye yoktur </td>
              </tr>
        }
        else
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td user-roles="@user.Id"></td>
                    <td><a class="btn btn-info" asp-action="RoleAssign" asp-route-id="@user.Id">
                        rol atama
                    </a></td>
                </tr>
            }
        }

    </table>

