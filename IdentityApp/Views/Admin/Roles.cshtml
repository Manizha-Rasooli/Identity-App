@model List<AppRole>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h3>Roller</h3>
<hr />
<a class="btn btn-info" href="/Admin/CreateRole">Rol Oluştur</a>
<hr />
<table class="table table table-bordered table-striped">
    <tr>
        <th>ID</th>
        <th>Rol İsmi</th>
        <th>Rol İşlemleri</th>
    </tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
       
            <td>@role.Name</td>
            <td>
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <form asp-action="RoleDelete" asp-route-id="@role.Id" method="post">
                            <button class="btn btn-danger"> <i class="fa fa-trash text-white"></i> </button>
                        </form>
                    </div>
                    <div class="col-md-6 col-sm-12">

                        <a class="btn btn-info" asp-action="RoleUpdate" asp-route-id="@role.Id">
                            <i class="fa fa-pencil"></i>
                        </a>
                    </div>
                   
                </div>
               
            </td>
            
        </tr>
    }
</table>

