<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <title>@ViewData["Title"] - IdentityAppCourse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Member/Index">Üye Ana Sayfa </a>
                    </li>

                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="btn btn-info" href="/Admin/Index">Admin Ana Sayfa </a>
                    </li>

                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="btn btn-info" href="/Member/Manager">Manager Ana Sayfa </a>
                    </li>

                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="btn btn-info" href="/Member/Editor">Editor Ana Sayfa </a>
                    </li>

                </ul>
               
            </div>
        </div>

    </nav>
    <div class="container" style="margin-top:10px;">
        <div class="row">
            <div class="col-md-8">
                @RenderBody()

            </div>
            <div class="col-md-4">
                <h3>Menü</h3>
                <a class="btn btn-danger btn-block" href="/Member/AnkaraPage">Ankara</a>
                <a class="btn btn-danger btn-block" href="/Member/ViolencePage">Voilence</a>
                <a class="btn btn-danger btn-block" href="/Member/ExchangeRedirect">Borsa Bilgileri</a>
                <a class="btn btn-info btn-block" href="/Member/PasswordChange">Şifre Değiştirme</a>
                <a class="btn btn-info btn-block" href="/Member/UserEdit">Bilgi Güncelleme</a>
                <a class="btn btn-info btn-block" asp-action="LogOut" asp-controller="Member" asp-route-returnUrl="/Home/Index">Çıkış</a>
            </div>
        </div>
    </div>
</body>
</html>
